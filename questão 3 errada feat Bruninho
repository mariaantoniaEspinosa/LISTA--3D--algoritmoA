#include <stdio.h>
int main (){
	float cel, fah=70;
	int i =1;
	
	while (i){
		printf ("Digite a temperatura em fahrenheit entre 50 e 70 graus:\n ");
		scanf ("%f", &fah);
	
		if (fah<50 || (fah >70)){
			printf ("Digite um valor valido!\n");
		} else {
			cel = (fah - 32) / 1.8;
			printf ("A temperatura em graus Celsius sera: %.1f\n", cel);
			i++;
		}
	}
	return 0;
}
